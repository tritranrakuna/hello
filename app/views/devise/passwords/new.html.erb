<div class="section">
    <div class="columns is-centered">
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>
        <h2 class="title is-4"> Forgot your password </h2>

        <div class="field">
          <div class="control">
          <%= f.input :email,
                      required: true, input_html:{class:"input"}, wrapper: false, label_html:{class:"label"},
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          </div>
        </div>

        <div class="field">
          <div class="control">
          <%= f.button :submit, "Send me reset password instructions", class:"button is-info is-nomall" %>
          </div>
        </div>
        <%= render "devise/shared/links"%>
      <% end %>

    </div>
</div>