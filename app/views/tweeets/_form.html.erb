<%= simple_form_for(@tweeet) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
  <%= f.input :tweeet, label: "Tweet about it", input_html: {class: "textarea is-medium"}, wrapper: false, label_html: {class: "label", placeholders: "Compose a new tweeet..."}%>
  </div>
</div>
  <%= f.button :submit, class: "button is-info" %>
<% end %>
